<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/gray"/>
    
    <LinearLayout
        android:id="@+id/bottomrll"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/bottom_colors"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/llFragmentOne"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivBottomOne"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@mipmap/i_one_normal" />

            <TextView
                android:id="@+id/tvBottomOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bottom_text_normal_colors"
                android:text="首页" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFragmentTwo"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivBottomTwo"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@mipmap/i_two_normal" />

            <TextView
                android:id="@+id/tvBottomTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bottom_text_normal_colors"
                android:text="医院" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFragmentThree"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivBottomThree"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@mipmap/i_three_normal" />

            <TextView
                android:id="@+id/tvBottomThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bottom_text_normal_colors"
                android:text="实用" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFragmentFour"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivBottomFour"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@mipmap/i_four_normal" />

            <TextView
                android:id="@+id/tvBottomFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bottom_text_normal_colors"
                android:text="我的" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>